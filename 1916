#include <iostream>
#include <vector>
#include <queue>
using namespace std;

vector<pair<int,int>> v[1001];
int dis[1001];

int main()
{
    int n,m,a,b,c,s,e;

    cin>>n>>m;

    for(int i=1;i<=m;i++){
        scanf("%d %d %d",&a,&b,&c);
        v[a].push_back({b,c});
    }

    cin>>s>>e;

    for(int i=1;i<=n;i++){
        dis[i] = 2147000000;
    }

    priority_queue<pair<int,int>> pq;
    pq.push({0,s});

    while(!pq.empty()){
        int cost = -pq.top().first;
        int current = pq.top().second;
        pq.pop();

        if(cost>dis[current]) continue;

        for(int i=0;i<v[current].size();i++){
            int next = v[current][i].first;
            int next_cost = cost+v[current][i].second;

            if(next_cost < dis[next]){
                dis[next] = next_cost;
                pq.push({-next_cost,next});
            }
        }
    }

    cout<<dis[e];
    return 0;
}
